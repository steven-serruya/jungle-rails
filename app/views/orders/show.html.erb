<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order, <%= @order.email %>!</h4>

    <table class="table">
      <thead>
        <tr>
          <th>Product Image</th>
          <th>Product Name</th>
          <th>Description</th>
          <th>Quantity</th>
          <th>Unit Price</th>
          <th>Total Price</th>
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each do |line_item| %>
          <tr>
          <td><%= image_tag line_item.product.image.url, alt: line_item.product.name %></td>
          <td><%= line_item.product.name %></td>
            <td><%= line_item.product.description %></td>
            <td><%= line_item.quantity %></td>
            <td>$<%= line_item.item_price_cents / 100.0 %></td>
            <td>$<%= line_item.total_price_cents / 100.0 %></td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="5">Total Amount:</th>
          <th>$<%= @order.total_cents / 100.0 %></th>
        </tr>
      </tfoot>
    </table>

  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
